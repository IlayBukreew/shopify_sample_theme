<div id="page_templ" class="page-width">
    <div class="grid">
        <h2>Solutions</h2>
        <div class="wrapper">
            {% include 'numbers' %}
            {% if section.settings.backheads_product_1 != blank and section.settings.backheads_product_2 != blank %}
                <div class="products">
                    {% include 'product-eczema', product: all_products[section.settings.backheads_product_1], disc: section.settings.backheads_product_1_text %}
                    {% include 'product-eczema', product: all_products[section.settings.backheads_product_2], disc: section.settings.backheads_product_2_text %}
                </div>
            {% endif %}
        </div>
        {{ page.content }}
    </div>
</div>

